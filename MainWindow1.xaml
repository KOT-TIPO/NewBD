<Window x:Class="Yagnov.MainWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yagnov"
        mc:Ignorable="d"
        Title="MainWindow1" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48*"></RowDefinition>
            <RowDefinition Height="118*"></RowDefinition>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="128*"></RowDefinition>
            <RowDefinition Height="19*"></RowDefinition>
            <RowDefinition Height="91*"></RowDefinition>
            <RowDefinition Height="98*"></RowDefinition>
            <RowDefinition Height="56*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48*"></ColumnDefinition>
            <ColumnDefinition Width="98*"></ColumnDefinition>
            <ColumnDefinition Width="43*"></ColumnDefinition>



        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Content="AddProductButton" HorizontalAlignment="Center" Height="57" Margin="0,10,0,0" Grid.Row="6" VerticalAlignment="Top" Width="306" Click="Button_Click"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Center" Height="58" Grid.Row="3" TextWrapping="Wrap" Text="NameTextBox" VerticalAlignment="Center" Width="306"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Center" Height="46" Grid.Row="5" TextWrapping="Wrap" Text="PriceTextBox" VerticalAlignment="Center" Width="306"/>
        <ListBox Grid.Column="1" HorizontalAlignment="Center" Height="66" Grid.Row="1" VerticalAlignment="Center" Width="306" d:ItemsSource="{d:SampleData ItemCount=5}"/>



    </Grid>
</Window>
